program error2 ()
{
    /* ask for number of numbers */
    printStr("How many numbers? ");
    int n;
    n = readInt();
    if ( n > 10 or a < 1 )              // error : a does not exist!!!
    {
        printStr("Bad number of numbers, aborting\n");
        exit();
    }

    /* read values and compute max */
    int i = 0;
    int v;
    int max;
    max = readInt();
    i = i + 1;
    loop
    {
        v = readInt();
        if ( v > max ) { max = v; }
